<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/sixteen"
    tools:context=".activity.detail.view.Detail">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/four"
        android:text="Datos generales" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/four"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sixteen"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre: Benjamin Franklin" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: benjamin_515@gmail.com" />

            <TextView
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre: Benfra" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: 316346445" />

            <TextView
                android:id="@+id/txt_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website: www.mandraque.com" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/four"
        android:text="Datos del domicilio" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/four"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sixteen"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calle: Kulas Light" />

            <TextView
                android:id="@+id/txt_suite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habitación: Apt. 556" />

            <TextView
                android:id="@+id/txt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad: Gwenborough" />

            <TextView
                android:id="@+id/txt_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código postal: 92998-3874" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/four"
        android:text="Datos de empresa" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/four"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sixteen"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre: Romaguera-Crona" />

            <TextView
                android:id="@+id/txt_catchPhrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eslogan: Multi-layered client-server neural-net" />

            <TextView
                android:id="@+id/txt_bs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BS: harness real-time e-markets" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>